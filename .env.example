# =============================================
# SMARTFIX TOOL ENFORCEMENT - CONFIGURATION
# =============================================

# Application Settings
APP_NAME=smartfix-tool-enforcement
APP_VERSION=0.1.0-alpha
ENVIRONMENT=development
LOG_LEVEL=INFO
PORT=8000
HOST=0.0.0.0

# IBM Cloud Configuration
IBM_CLOUD_API_KEY=your_ibm_cloud_api_key_here
IBM_CLOUD_REGION=us-south
IBM_CLOUD_RESOURCE_GROUP=smartfix-tool-enforcement-alpha
IBM_CLOUD_ACCOUNT_ID=your_ibm_cloud_account_id

# AI Service Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
AI_MODEL=deepseek-coder
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TIMEOUT=30

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smartfix_tool_enforcement
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL_MODE=prefer

# Cache Configuration (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=12

# Notification Services
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# GitHub Integration
GITHUB_APP_ID=your_github_app_id_here
GITHUB_APP_PRIVATE_KEY=your_github_app_private_key_here
GITHUB_ACCESS_TOKEN=your_github_access_token_here

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here

# Feature Flags
AUTO_APPROVAL_ENABLED=false
MAX_AUTO_APPROVAL_SCORE=0.9
AUTHORIZATION_REQUIRED=true
NOTIFICATIONS_ENABLED=true
